@model Learning.ViewModel.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout_Login";
}

 <div class="row justify-content-center text-white-50 p-4"><h3 class="text-center">Please login to access Admin Panel</h3></div>
<div class="row justify-content-center">
    <div class="col-md-5">
        <form asp-action="Login" class="pnl-login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password"  />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-check-label">
                    @Html.EditorFor(model => model.RememberMe) Remember Me
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn-submit" />
            </div>
        </form>
    </div>
</div>


