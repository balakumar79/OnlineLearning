@using Microsoft.AspNetCore.Identity
@inject SignInManager<Learning.Entities.AppUser> SignInManager
@inject UserManager<Learning.Entities.AppUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <form asp-action="Logout" asp-controller="Account">
        <button type="submit"  class="nav-link text-dark">Hello @User.Identity.Name!</button>
            </form>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-action="Logout" asp-controller="Account">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
