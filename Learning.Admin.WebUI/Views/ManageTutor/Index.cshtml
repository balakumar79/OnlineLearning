@model IEnumerable<Learning.Tutor.ViewModel.TutorViewModel>

@{
    ViewData["Title"] = "Index";
}

<main class="page-content">
    <div class="container-fluid tutor-orange-bg">
        <h1>Manage Tutor</h1>
        <div class="col-md-12 col-sm-12 col-xs-12 white-bg">
            <div class="col-md-12 col-sm-12 col-xs-12 white-bg">
                <p>
                    <a asp-action="Create">Create New</a>
                </p>
                <table class="tblTutor nowrap table-responsive display">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TutorID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserName)
                            </th>
                           
                            <th>
                                @Html.DisplayNameFor(model => model.Organization)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Educations)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastLoggedIn)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedAt)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TutorID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                               
                                <td>
                                    @Html.DisplayFor(modelItem => item.Organization)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Educations)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastLoggedIn)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedAt)
                                </td>
                                <td>
                                   @* @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</main>
@section Scripts{
    <script>
        $('.tblTutor').DataTable();
    </script>
}