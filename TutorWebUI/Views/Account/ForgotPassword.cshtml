
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_Layout_Login";
}

<section class="testimonial py-5" id="testimonial">
    <div class="container">
        <div class="row  registration-block">
            <div class="col-md-4 py-5 bg-primary text-white text-center  blue-bg ">
                <div class=" ">
                    <div class="card-body">
                        <img src="/images/course-image.png" style="width:30%">
                        <h2 class="py-3">Registration</h2>
                        <p>
                           Forgot your password? Please enter your email here.  We will send you a reset link.

                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-8 ">
                <div class="row">

                    <div class="student-reg">
                        <div class="stu-heading">
                            <h4 class="pb-4 heading-font">Forgot Password</h4>
                        </div>
                        <form action="ForgotPassword" method="post" class="col-md-11">
                            <div class="form-group col-md-7">
                                <label>Email ID</label>
                                <input name="Email" required type="text" class="form-control" placeholder="Please enter your email id" />

                            </div>
                            <div class=" form-group col-md-7">
                                <button class="btn btn-success">Rest Password</button>
                            </div>
                        </form>
                    </div>
                </div>
                </div>
            </div>
        </div>
   

</section>


