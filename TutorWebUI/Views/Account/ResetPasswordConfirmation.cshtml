@model Learning.ViewModel.Account.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Reset Password Confirmation";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";

}
@{ var message = ViewData["message"];}
<section class="testimonial py-5" id="testimonial">
    <div class="container">
        <div class="row  registration-block">
             <div class="col-md-11">
            <h4 class="@(message==null?"text-success":"text-error")">@(message==null? "Success !!!":"Failed !!!")</h4>
             </div>
            <div class="col-md-11">
              

                    @if (message == null)
                    {


                        <p>You have reset your password successfully.</p>
                    }
                    else
                    {
                        @message.ToString();
                    }
              
            </div>

         </div>
</div>
</section>